@using System.Data
@{
    ViewData["Title"] = "Diagnostic Dashboard";
}

<!-- Stats Removed as per user request -->

<div class="row">
    <div class="col-md-8">
        <div class="glass-card">
            <h4 class="fw-bold mb-4">Recent X-Ray Activity</h4>
            <div class="list-group list-group-flush">
                <div class="list-group-item bg-transparent border-0 px-0 d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary me-3 text-white d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            <i class="fas fa-microscope"></i>
                        </div>
                        <div>
                            <div class="fw-bold">AI Diagnostic Core</div>
                            <div class="small text-muted">Automated scan processing active</div>
                        </div>
                    </div>
                    <a asp-controller="Diagnosis" asp-action="Reports" class="btn btn-sm btn-premium">View Results</a>
                </div>
                <!-- Mock item 2 -->
                <div class="list-group-item bg-transparent border-0 px-0 d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success me-3 text-white d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Leg Fracture - Bob Ross</div>
                            <div class="small text-muted">Completed • 2 hours ago</div>
                        </div>
                    </div>
                    <span class="badge bg-light text-dark">Verified</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card h-100">
            <h4 class="fw-bold mb-4">Quick Actions</h4>
            <div class="d-grid gap-3">
                <a asp-controller="Patient" asp-action="Create" class="btn btn-outline-primary py-3 rounded-3 text-start">
                    <i class="fas fa-user-plus me-2"></i> Register Patient
                </a>
                <a asp-controller="XRay" asp-action="Upload" class="btn btn-outline-primary py-3 rounded-3 text-start">
                    <i class="fas fa-upload me-2"></i> Upload New Scan
                </a>
                <a asp-controller="Diagnosis" asp-action="Reports" class="btn btn-outline-primary py-3 rounded-3 text-start">
                    <i class="fas fa-print me-2"></i> Print Today's Reports
                </a>
            </div>
        </div>
    </div>
</div>
