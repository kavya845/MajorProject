@{
    ViewData["Title"] = "Admin Dashboard";
    dynamic stats = ViewBag.Stats;
}

<div class="row mb-5">
    <div class="col-md-12">
        <h2 class="fw-bold">System Overview</h2>
        <p class="text-muted">Welcome, Administrator.</p>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="glass-card text-center py-4">
            <h2 class="fw-bold text-primary display-6">@stats.TotalPatients</h2>
            <div class="text-uppercase fw-bold text-muted small">Total Patients</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card text-center py-4">
            <h2 class="fw-bold text-success display-6">@stats.TotalScans</h2>
            <div class="text-uppercase fw-bold text-muted small">Total Scans</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card text-center py-4">
            <h2 class="fw-bold text-danger display-6">@stats.Alerts</h2>
            <div class="text-uppercase fw-bold text-muted small">Critical Alerts</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="glass-card h-100">
            <h4 class="fw-bold mb-4">Quick Actions</h4>
            <div class="d-grid gap-3">
                <a asp-action="Patients" class="btn btn-outline-primary py-3">View All Patients Details</a>
              
                <a asp-controller="Diagnosis" asp-action="Reports" class="btn btn-outline-success py-3">View All Medical Reports</a>
            </div>
        </div>
    </div>
</div>
