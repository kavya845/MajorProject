@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Manage Patients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold">Patient Registry</h3>
</div>

<div class="glass-card">
    <table class="table custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Contact</th>
                <th>Registered</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>#@row["PatientID"]</td>
                    <td class="fw-bold">@row["FullName"]</td>
                    <td><span class="badge bg-light text-dark">@row["Username"]</span></td>
                    <td>@row["ContactNumber"]</td>
                    <td>@Convert.ToDateTime(row["CreatedAt"]).ToString("MMM dd, yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
