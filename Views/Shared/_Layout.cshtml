<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - X-Ray Diagnostics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="sidebar">
        <div class="brand">
            <i class="fas fa-microscope"></i> X-RAY CORE
        </div>
        <nav>
            @{
                var role = Context.Session.GetString("Role");
                var username = Context.Session.GetString("Username") ?? "Guest";
            }
            
            @if (role == "Admin")
            {
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-th-large"></i> Dashboard
                </a>
                <a class="nav-link" asp-controller="Admin" asp-action="Patients">
                    <i class="fas fa-user-injured"></i> All Patients
                </a>
                <a class="nav-link" asp-controller="Diagnosis" asp-action="Reports">
                    <i class="fas fa-file-medical-alt"></i> All Reports
                </a>
               
                <hr style="border-color: rgba(255,255,255,0.1)">
                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            }
            else if (role == "Patient")
            {
                <a class="nav-link" asp-controller="PatientPanel" asp-action="Index">
                    <i class="fas fa-th-large"></i> My Dashboard
                </a>
                <a class="nav-link" asp-controller="PatientPanel" asp-action="UploadScan">
                    <i class="fas fa-cloud-upload-alt"></i> Upload Scan
                </a>
                <a class="nav-link" asp-controller="PatientPanel" asp-action="EditProfile">
                    <i class="fas fa-user-edit"></i> Edit Profile
                </a>
                <hr style="border-color: rgba(255,255,255,0.1)">
                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            }
            else
            {
                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            }
        </nav>
    </div>

    <div class="main-content">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
            <div class="user-profile glass-card p-2 px-3 d-flex align-items-center" style="margin-bottom: 0;">
                <span class="me-2 fw-semibold">@username</span>
                <i class="fas fa-user-circle fa-lg text-primary"></i>
            </div>
        </header>

        <main role="main" class="pb-3 fade-in">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
