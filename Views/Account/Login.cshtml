@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - X-Ray Diagnostics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

        }
    </style>
</head>
<body>
    <div class="col-md-4">
        <div class="glass-card p-5 text-center shadow-lg" style="background: rgba(255,255,255,0.9);">
            <div class="h1 fw-bold mb-4" style="background: var(--primary-gradient); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                X-RAY CORE
            </div>
            <p class="text-muted mb-5">Diagnostic Management System</p>
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" autocomplete="off">
                <div class="mb-3 text-start">
                    <label class="form-label small fw-bold">Username</label>
                    <input type="text" name="username" value="" class="form-control p-3 rounded-pill border-0 shadow-sm" placeholder="Enter username" required autocomplete="off" />
                </div>
                <div class="mb-4 text-start">
                    <label class="form-label small fw-bold">Password</label>
                    <input type="password" name="password" value="" class="form-control p-3 rounded-pill border-0 shadow-sm" placeholder="Enter password" required autocomplete="new-password" />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-premium py-3 rounded-pill shadow">LOG IN</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
