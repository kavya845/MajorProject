@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Diagnostic Reports";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&display=swap');

    :root {
        --primary: #0f172a;
        --accent: #2563eb;
        --accent-soft: rgba(37, 99, 235, 0.05);
        --bg: #f1f5f9;
        --card-bg: #ffffff;
        --text-main: #1e293b;
        --text-muted: #64748b;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
    }

    body { 
        background-color: var(--bg); 
        font-family: 'Outfit', sans-serif; 
        color: var(--text-main);
        -webkit-font-smoothing: antialiased;
    }

    .archive-header {
        padding: 4rem 0 1rem;
        background: linear-gradient(180deg, #ffffff 0%, rgba(241, 245, 249, 0) 100%);
    }

    .medical-title {
        font-weight: 800;
        font-size: 3rem;
        letter-spacing: -0.02em;
        background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }

    .report-card {
        border: 1px solid rgba(255,255,255,0.7);
        border-radius: 24px;
        background: var(--card-bg);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06), 0 20px 25px -5px rgba(0,0,0,0.05);
        margin-bottom: 3.5rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        overflow: hidden;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease;
    }

    .report-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
    }

    .report-header {
        padding: 1.5rem 2.5rem;
        background: var(--accent-soft);
        border-bottom: 1px solid rgba(37, 99, 235, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .patient-info h5 {
        font-weight: 700;
        margin-bottom: 0.1rem;
        color: var(--primary);
    }

    .status-badge {
        padding: 0.6rem 1.4rem;
        border-radius: 100px;
        font-weight: 700;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .badge-normal { background: #d1e7dd; color: #065f46; border: 1px solid rgba(16, 185, 129, 0.2); }
    .badge-abnormal { background: #fee2e2; color: #991b1b; border: 1px solid rgba(239, 68, 68, 0.2); }
    .badge-mismatch { background: #fef3c7; color: #92400e; border: 1px solid rgba(245, 158, 11, 0.2); }

    .diag-section {
        padding: 3.5rem 2.5rem;
        text-align: center;
    }

    .diag-label {
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.1rem;
        margin-bottom: 1rem;
    }

    .diag-focus {
        font-size: 3.2rem;
        font-weight: 800;
        color: var(--primary);
        line-height: 1;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .clinical-narrative {
        font-size: 1.15rem;
        color: var(--text-muted);
        max-width: 80%;
        margin: 0 auto;
        line-height: 1.6;
    }

    .scan-footer {
        background: #fcfcfd;
        padding: 2.5rem;
        border-top: 1px solid #f1f5f9;
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 2.5rem;
    }

    .scan-view-frame {
        background: black;
        border-radius: 16px;
        overflow: hidden;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 4px solid #fff;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s ease;
    }

    .scan-view-frame:hover img {
        transform: scale(1.05);
    }

    .scan-view-frame img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.4s ease;
    }

    .action-panel {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .recommend-box {
        background: white;
        padding: 1.5rem;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
        margin-bottom: 1rem;
    }

    .recommend-box p {
        font-weight: 600;
        color: var(--accent);
        margin: 0;
        font-size: 1.1rem;
    }

    .meta-data {
        font-size: 0.85rem;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .btn-premium {
        background: var(--primary);
        color: white;
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        border-radius: 100px;
        transition: all 0.2s ease;
    }

    .btn-premium:hover {
        background: var(--accent);
        color: white;
        transform: translateY(-1px);
    }

    .caution-banner {
        background: #fffbeb;
        border-left: 5px solid #f59e0b;
        padding: 1.2rem 2.5rem;
        margin: 1rem 2.5rem 0;
        border-radius: 16px;
        display: flex;
        align-items: center;
        gap: 1.2rem;
        color: #92400e;
        font-weight: 600;
        animation: pulse-caution 2s infinite;
    }

    @@keyframes pulse-caution {
        0% { border-left-color: #f59e0b; }
        50% { border-left-color: #ef4444; }
        100% { border-left-color: #f59e0b; }
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .report-card { animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) both; }
</style>

<div class="archive-header text-center">
    <div class="container">
        <h1 class="medical-title">Clinical Archive</h1>
        <p class="text-muted fw-bold">Intelligent Diagnostic Reporting System</p>
        
        @if (ViewBag.IsFiltered == true)
        {
            <div class="mt-2 d-flex justify-content-center gap-3">
               
                <a asp-controller="PatientPanel" asp-action="UploadScan" class="btn btn-sm btn-premium">
                    <i class="fas fa-plus me-2"></i>New Analysis
                </a>
            </div>
        }
    </div>
</div>

<div class="container pb-5">
    @foreach (DataRow row in Model.Rows)
    {
        string diagnosis = row["DiagnosisResult"]?.ToString() ?? "";
        string severity = row["Severity"]?.ToString() ?? "";
        string badgeClass;
        string badgeText;

        if (severity == "Critical" || severity == "Abnormal")
        {
             badgeClass = "badge-abnormal";
             badgeText = "Abnormal";
        }
        else if (severity == "Mismatch")
        {
             badgeClass = "badge-mismatch";
             badgeText = "Mismatch";
        }
        else
        {
             badgeClass = "badge-normal";
             badgeText = "Normal";
        }

        <div class="report-card">
            <div class="report-header">
                <div class="patient-info">
                    <h5 class="mb-0">@row["PatientName"]</h5>
                    <div class="small text-muted">CASE ID: PR-@row["ReportID"].ToString().PadLeft(4, '0') &bull; @Convert.ToDateTime(row["GeneratedDate"]).ToString("MMM dd, yyyy")</div>
                </div>
                <div class="status-badge @badgeClass">
                    <i class="fas @(badgeText == "Normal" ? "fa-check-circle" : (diagnosis == "upload clear image" || diagnosis == "reupload the image" ? "fa-image" : "fa-exclamation-triangle"))"></i>
                    @(diagnosis == "upload clear image" || diagnosis == "reupload the image" ? "Action Required" : badgeText)
                </div>
            </div>

            @if (severity == "Critical" || severity == "Abnormal")
            {
                <div class="caution-banner">
                    <i class="fas fa-exclamation-triangle fa-lg"></i>
                    <span>CAUTION: This analysis indicates potential medical anomalies that require immediate physician review.</span>
                </div>
            }

            <div class="diag-section">
                <div class="diag-label">Analysis Result</div>
                <div class="diag-focus">@row["DiagnosisResult"]</div>
                <div class="clinical-narrative">@row["DoctorComments"]</div>
            </div>

            <div class="scan-footer">
                <div class="scan-view-frame">
                    <img src="@row["ImagePath"]" alt="Clinical Scan">
                </div>
                <div class="action-panel">
                    <div class="diag-label mb-2">Recommendation</div>
                    <div class="recommend-box">
                        <p>@row["Recommendations"]</p>
                    </div>
                    <div class="meta-data mt-auto">
                        <span><i class="fas fa-shield-alt me-1"></i> AI Confidence: @row["Confidence"]%</span>
                        <span><i class="fas fa-user-md me-1"></i> Verified Record</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
