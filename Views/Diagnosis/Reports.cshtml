@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Diagnostic Reports";
}

<style>
    :root {
        --medical-blue: #0056b3;
        --medical-bg: #f8f9fa;
    }
    body { background-color: var(--medical-bg); font-family: 'Inter', sans-serif; }
    .report-card {
        border: none;
        border-radius: 12px;
        border-top: 8px solid var(--medical-blue);
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        margin-bottom: 3rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        overflow: hidden;
    }
    .status-badge {
        padding: 0.5rem 1.2rem;
        border-radius: 4px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
    }
    .badge-normal { background-color: #d1e7dd; color: #0f5132; }
    .badge-abnormal { background-color: #f8d7da; color: #842029; }
    .badge-mismatch { background-color: #fff3cd; color: #856404; }
    .diag-focus {
        font-size: 2.2rem;
        color: var(--medical-blue);
        font-weight: 800;
        line-height: 1.2;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="color: var(--medical-blue);">Clinical Archive</h1>
        <p class="text-muted">Automated Diagnostic Records</p>
        @if (ViewBag.IsFiltered == true)
        {
            <div class="d-flex justify-content-center align-items-center mt-2">
                <a asp-action="Reports" class="btn btn-sm btn-outline-secondary rounded-pill me-2">
                    <i class="fas fa-history me-1"></i> Back to Archive
                </a>
                <a asp-controller="PatientPanel" asp-action="UploadScan" class="btn btn-sm btn-premium rounded-pill">
                    <i class="fas fa-plus me-1"></i> Upload New Scan
                </a>
            </div>
        }
    </div>

    @foreach (DataRow row in Model.Rows)
    {
        string diagnosis = row["DiagnosisResult"]?.ToString() ?? "";
        string severity = row["Severity"]?.ToString() ?? "";
        string badgeClass;
        string badgeText;

        if (diagnosis.Contains("MISMATCH") || severity == "Moderate")
        {
             badgeClass = "badge-mismatch";
             badgeText = "Mismatch";
        }
        else if (severity == "Critical")
        {
             badgeClass = "badge-abnormal";
             badgeText = "Abnormal";
        }
        else
        {
             badgeClass = "badge-normal";
             badgeText = "Normal";
        }

        <div class="report-card animate-slide-up">
            <div class="p-4 border-bottom bg-light d-flex justify-content-between align-items-center">
                <div>
                   <h5 class="fw-bold mb-0">@row["PatientName"]</h5>
                   <span class="small text-muted">ID: #@row["ReportID"] | @Convert.ToDateTime(row["GeneratedDate"]).ToString("MMM dd, yyyy")</span>
                </div>
                <span class="status-badge @badgeClass">
                    @badgeText
                </span>
            </div>

            <div class="p-5 text-center">
                <div class="small text-muted text-uppercase fw-bold mb-2">Automated Diagnostic Result</div>
                <div class="diag-focus mb-4">@row["DiagnosisResult"]</div>
                
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <p class="lead text-muted px-3">@row["DoctorComments"]</p>
                    </div>
                </div>
            </div>

            <div class="bg-light p-4">
                <div class="row align-items-center">
                    <div class="col-md-6 border-end">
                        <div class="small text-muted fw-bold mb-2">SCAN IMAGERY</div>
                        <img src="@row["ImagePath"]" class="img-fluid rounded border shadow-sm" style="max-height: 200px;" alt="Scan Preview">
                    </div>
                    <div class="col-md-6 ps-4">
                        <div class="small text-muted fw-bold mb-2">RECOMMENDATION</div>
                        <p class="fw-bold text-primary mb-0">@row["Recommendations"]</p>
                        <div class="mt-3 small text-muted">Confidence: @row["Confidence"]% Accuracy Checked</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;800&display=swap" rel="stylesheet">
