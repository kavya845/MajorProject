@model XRayDiagnosticSystem.Models.XRay
@using XRayDiagnosticSystem.Models

@{
    ViewData["Title"] = "X-Ray Analysis";
    var mlResults = ViewBag.MLResults as List<MLPrediction>;
}

<div class="container-fluid mt-4">
    <div class="row g-4">

        <!-- ================= LEFT : X-RAY VIEWER ================= -->
        <div class="col-lg-7">
            <div class="card shadow-sm rounded-4 h-100">

                <!-- Header -->
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h6 class="mb-0">
                        <i class="fas fa-x-ray me-2"></i> Diagnostic Viewer
                    </h6>
                    <span class="badge bg-light text-primary fw-bold">
                        Scan ID: @Model.XRayId
                    </span>
                </div>

                <!-- Image -->
                <div class="card-body bg-dark d-flex justify-content-center align-items-center position-relative"
                     style="min-height: 520px;">
                    <img src="@Model.ImagePath"
                         id="mainXray"
                         class="img-fluid rounded shadow border border-secondary"
                         style="max-height: 480px;"
                         alt="X-Ray Scan" />

                    <!-- AI Scan Overlay -->
                    <div id="neuralScanner" class="position-absolute w-100 h-100 d-none">
                        <div class="scan-line"></div>
                    </div>
                </div>

                <!-- Notes -->
                <div class="card-footer bg-light small text-muted">
                    <strong>Technician Notes:</strong> @Model.TechnicianNotes
                </div>
            </div>
        </div>

        <!-- ================= RIGHT : ANALYSIS ================= -->
        <div class="col-lg-5">
            <div class="card shadow-sm rounded-4 h-100 p-4">

                <!-- Patient Info -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <small class="text-muted text-uppercase fw-bold">Patient</small>
                        <h5 class="fw-bold text-primary mb-0">@Model.PatientName</h5>
                    </div>

                    <button class="btn btn-outline-primary rounded-pill px-4"
                            onclick="triggerAIScan()">
                        <i class="fas fa-robot me-1"></i> Run AI Scan
                    </button>
                </div>

                <!-- AI Insights -->
                <div id="aiInsights"
                     class="border rounded-3 p-3 mb-4 d-none"
                     style="background:#f8ffff; border-color:#b6f2f2;">
                    <h6 class="fw-bold text-info mb-3">
                        <i class="fas fa-brain me-2"></i> AI Prediction Summary
                    </h6>

                    @if (mlResults != null)
                    {
                        @foreach (var pred in mlResults)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">@pred.Label</span>
                                <span class="badge bg-info text-dark">
                                    @(Math.Round(pred.Probability * 100, 1))%
                                </span>
                            </div>
                        }
                    }
                </div>

                <!-- Rule Engine Form -->
                <form asp-action="ProcessAnalysis" method="post">
                    <input type="hidden" name="xRayId" value="@Model.XRayId" />

                    <div class="mb-4">
                        <label class="form-label fw-bold">Observed Findings</label>
                        <small class="text-muted d-block mb-2">
                            Enter or select findings from the scan
                        </small>

                        <input type="text"
                               name="tagsString"
                               id="tagsInput"
                               class="form-control form-control-lg"
                               placeholder="Cloudy, Fluid, Fracture"
                               required />

                        <!-- Quick Tags -->
                        <div class="mt-3">
                            <span class="tag" onclick="addTag('Cloudy')">Cloudy</span>
                            <span class="tag" onclick="addTag('Fluid')">Fluid</span>
                            <span class="tag" onclick="addTag('Fracture')">Fracture</span>
                            <span class="tag" onclick="addTag('Clear')">Clear</span>
                        </div>
                    </div>

                    <!-- Info -->
                    <div class="alert alert-primary rounded-4 small">
                        <i class="fas fa-info-circle me-2"></i>
                        Rule engine evaluates findings to suggest conditions.
                    </div>

                    <!-- Submit -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow">
                            <i class="fas fa-cogs me-2"></i> Run Diagnostic Rules
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function triggerAIScan() {
        const scanner = document.getElementById('neuralScanner');
        const insight = document.getElementById('aiInsights');

        scanner.classList.remove('d-none');

        setTimeout(() => {
            scanner.classList.add('d-none');
            insight.classList.remove('d-none');
            insight.classList.add('fade-in');
        }, 2500);
    }

    function addTag(tag) {
        const input = document.getElementById('tagsInput');
        if (!input.value.toLowerCase().includes(tag.toLowerCase())) {
            input.value = input.value
                ? input.value + ', ' + tag
                : tag;
        }
    }
</script>

<style>
    .scan-line {
        position: absolute;
        width: 100%;
        height: 3px;
        background: rgba(0, 255, 255, 0.8);
        animation: scanMove 2.5s infinite linear;
    }

    @@keyframes scanMove {
        0% { top: 0; opacity: 0; }
        50% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }

    .tag {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        background: #f1f5ff;
        color: #2e3192;
        font-size: 0.85rem;
        margin-right: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .tag:hover {
        background: #2e3192;
        color: white;
    }
</style>
}
